{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.@(js)": [
      "npm run lint",
      "npm run format"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "jsxSingleQuote": true
  },
  "dependencies": {
    "@ant-design/icons": "^4.6.2",
    "@craco/craco": "^6.1.2",
    "@meilisearch/instant-meilisearch": "^0.4.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "algoliasearch": "^4.9.1",
    "antd": "^4.15.1",
    "antd-img-crop": "^3.14.1",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "craco-less": "^1.17.1",
    "dotenv": "^9.0.2",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.1",
    "node-sass": "^5.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dotenv": "^0.1.3",
    "react-icons": "^4.2.0",
    "react-instantsearch-dom": "^6.11.0",
    "react-loadable": "^5.5.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-text-truncate": "^0.16.0",
    "react-validation": "^3.0.7",
    "swiper": "^6.5.9",
    "validator": "^13.6.0",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-dotenv && craco start",
    "build": "react-dotenv && craco build",
    "test": "react-dotenv && craco test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write src"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1"
  },
  "react-dotenv": {
    "whitelist": [
      "MEILI"
    ]
  }
}
